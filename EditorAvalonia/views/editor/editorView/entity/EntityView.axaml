<UserControl
    x:Class="EditorAvalonia.views.editor.EntityView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:EditorAvalonia.viewmodels.editorview;assembly=EditorAvalonia"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:EntityViewModel"
    mc:Ignorable="d">
	<Grid RowDefinitions="Auto,*">
		<TextBox
            Grid.Row="0"
            Height="30"
            FontSize="12"
            Foreground="White" />

		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
			<Border
                Margin="4"
                Padding="10"
                Background="#3a3a3a"
                BorderBrush="#555"
                BorderThickness="1"
                CornerRadius="6">
				<StackPanel>
					<Grid ColumnDefinitions="70,20,*" RowDefinitions="*,*,*">
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="Location" />
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="X:" />
						<NumericUpDown
                            Grid.Row="0"
                            Grid.Column="2"
                            Height="30"
                            FontSize="12"
                            Foreground="White"
                            Value="0" />

						<TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="Y:" />
						<NumericUpDown
                            Grid.Row="1"
                            Grid.Column="2"
                            Height="30"
                            FontSize="12"
                            Foreground="White"
                            Value="0" />
						<TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="X:" />
						<NumericUpDown
                            Grid.Row="2"
                            Grid.Column="2"
                            Height="30"
                            FontSize="12"
                            Foreground="White"
                            Value="0" />
					</Grid>
					<Grid ColumnDefinitions="70,20,*" RowDefinitions="*,*,*">
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="Rotation" />
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Text="X:" />
						<NumericUpDown
                            Grid.Row="0"
                            Grid.Column="2"
                            Height="30"
                            FontSize="12"
                            Foreground="White"
                            Value="0" />

						<TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="Y:" />
						<NumericUpDown
                            Grid.Row="1"
                            Grid.Column="2"
                            Height="30"
                            FontSize="12"
                            Foreground="White"
                            Value="0" />
						<TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="X:" />
						<NumericUpDown
                            Grid.Row="2"
                            Grid.Column="2"
                            Height="30"
                            FontSize="12"
                            Foreground="White"
                            Value="0" />
					</Grid>
					<Grid ColumnDefinitions="70,20,*" RowDefinitions="*,*,*">
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="Scale" />
						<TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="X:" />
						<NumericUpDown
                            Grid.Row="0"
                            Grid.Column="2"
                            Height="30"
                            FontSize="12"
                            Foreground="White"
                            Value="0" />

						<TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="Y:" />
						<NumericUpDown
                            Grid.Row="1"
                            Grid.Column="2"
                            Height="30"
                            FontSize="12"
                            Foreground="White"
                            Value="0" />
						<TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="White"
                            Text="X:" />
						<NumericUpDown
                            Grid.Row="2"
                            Grid.Column="2"
                            Height="30"
                            FontSize="12"
                            Foreground="White"
                            Value="0" />
					</Grid>
				</StackPanel>
			</Border>
		</ScrollViewer>
	</Grid>
</UserControl>
